<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="vm"
            type="org.rakulee.buup.viewmodel.EmployerViewModel" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.employer.EmployerHome">

    <androidx.appcompat.widget.SearchView
        android:id="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:elevation="2dp"
        android:background="@drawable/bg_search"
        app:showDividers="beginning|end"
        app:searchIcon="@drawable/ic_search"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:defaultQueryHint="Part-Time Jobs in San Jose"
        app:queryHint="Part-Time Jobs in San Jose"
        app:layout_constraintVertical_bias="0.04"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btn_navigator"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="@drawable/ic_search_navigator"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toStartOf="@id/search_bar"
        app:layout_constraintEnd_toEndOf="@id/search_bar"
        app:layout_constraintTop_toTopOf="@id/search_bar"
        app:layout_constraintBottom_toBottomOf="@id/search_bar"/>


    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:context=".MapsFragment" />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>