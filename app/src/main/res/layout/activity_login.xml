<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="activity"
            type="org.rakulee.buup.screens.LoginActivity" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".screens.LoginActivity">

        <Button
            android:id="@+id/employer_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Employer Test"
            android:onClick="@{() -> activity.onClickEmployerTest()}"
            app:layout_constraintBottom_toTopOf="@+id/job_seeker_test"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/job_seeker_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Job Seeker Test"
            android:onClick="@{() -> activity.onClickJobSeekerTest()}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/employer_test" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
